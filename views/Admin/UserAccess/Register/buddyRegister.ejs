    <main id="main" class="main">

        <div class="pagetitle">
            <%- messages('message', locals) %>
                <h1>Admin Dashboard</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin-dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/Buddy-register">Add Buddy</a></li>
                    </ol>
                </nav>
        </div>
        <!-- End Page Title -->

        <div class="container">

            <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-6 col-md-10 d-flex flex-column align-items-center justify-content-center">

                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="pt-4 pb-2">
                                        <h5 class="card-title text-center pb-0 fs-4">Create a Buddy User</h5>
                                    </div>

                                    <form class="row g-3 mx-4 mt-2 mb-3 needs-validation" method="post" action="/Buddy-register" novalidate>

                                        <!--Full Name-->
                                        <div class="col-12">
                                            <label for="BuddyName" class="form-label">Full Name</label>
                                            <input type="text" name="BuddyName" placeholder="Enter Full Name" class="form-control" id="BuddyName" required>
                                            <div class="invalid-feedback">Please enter your Full Name!</div>
                                        </div>

                                        <!--User Email-->
                                        <div class="col-12">
                                            <label for="BuddyEmail" class="form-label">Email</label>
                                            <input type="email" name="BuddyEmail" placeholder="Enter Email" class="form-control" id="BuddyEmail" required>
                                            <div class="invalid-feedback">Please enter a valid Email!</div>
                                        </div>

                                        <!--User Number-->
                                        <div class="col-12">
                                            <label for="BuddyContactNumber" class="form-label">Phone Number</label>
                                            <input type="tel" name="BuddyContactNumber" placeholder="Enter Phone Number" class="form-control" id="BuddyContactNumber" required>
                                            <div class="invalid-feedback">Please enter a valid Phone Number!</div>
                                        </div>

                                        <!--User Stream-->
                                        <div class="col-12">
                                            <label for="BuddyStream" class="form-label">Stream</label>
                                            <select class="form-select" name="BuddyStream" aria-label="Stream selection" id="BuddyStream" required>
                                                <option selected disabled value="">Select</option>
                                                <option value="BCom">BCom</option>
                                                <option value="BAF">BAF</option>
                                                <option value="BBI">BBI</option>
                                                <option value="BFM">BFM</option>
                                                <option value="BMS">BMS</option>
                                                <option value="BA">BA</option>
                                                <option value="BAMMC">BAMMC</option>
                                                <option value="BAFTNMP">BAFTNMP</option>
                                                <option value="BSc">BSc</option>
                                                <option value="BSc(BioTech)">BSc(BioTech)</option>
                                                <option value="BSc(CS)">BSc(CS)</option>
                                                <option value="BSc(IT)">BSc(IT)</option>
                                                <option value="BSc(Data Science & BA)">BSc(Data Science & BA)</option>
                                                <option value="BVoc(Sports & EM)">BVoc(Sports & EM)</option>
                                                <option value="BVoc(Web Technologies)">BVoc(Web Technologies)</option>
                                            </select>
                                            <div class="invalid-feedback">Please select an option!</div>
                                        </div>

                                        <!--Bud Year-->
                                        <div class="col-12">
                                            <label for="BuddyYear" class="form-label">Bud Year</label>
                                            <select class="form-select" name="BuddyYear" aria-label="Stream selection" id="BuddyYear" required>
                                                <option selected disabled value="">Select</option>
                                                <option value="FY">FY</option>
                                                <option value="SY">SY</option>
                                                <option value="TY">TY</option>
                                            </select>
                                        </div>

                                        <!--User ID-->
                                        <div class="col-12">
                                            <label for="BuddyID" class="form-label">Buddy ID</label>
                                            <input type="text" name="BuddyID" placeholder="Enter Buddy ID" class="form-control" id="BuddyID" required>
                                            <div class="invalid-feedback">Please enter a valid Buddy ID!</div>
                                        </div>

                                        <!--User Password-->
                                        <div class="col-12">
                                            <label for="BuddyPassword" class="form-label">Password</label>
                                            <input type="password" name="BuddyPassword" placeholder="Enter Password" class="form-control" id="BuddyPassword" required>
                                            <div class="invalid-feedback">Please enter a valid Password!</div>
                                        </div>

                                        <div class="col-12">
                                            <button class="btn btn-primary w-100" type="submit">Create Account</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-md-10 d-flex flex-column">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="pt-4 pb-2 mx-3">
                                        <h5 class="card-title text-center pb-0 fs-4">Create Multiple Buddy Users</h5>
                                        <h6 class="card-title text-center pb-0 fs-5">Instructions for file format:</h6>
                                        <p class="pb-0 fs-6">
                                            Step 1: Click the Download button below to download the template.<br> Step 2: We've filled a few rows for your understanding.<br> Step 3: Clear out all the fields leaving the header that is the first row<br>Step 4: Enter your data in the sheet and submit it!
                                        </p>
                                        <a class="btn btn-primary w-100" href="/uploads/files/Buddy.xlsx">Download</a>
                                    </div>
                                    <form class="row g-3 mx-2 my-3 needs-validation" method="post" enctype="multipart/form-data" action="/multiple-Buddy-register" novalidate>
                                        <div class="mb-3">
                                            <label for="uploadfile" class="form-label">Enter the excel sheet below</label>
                                            <input type="file" name="uploadfile" class="form-control" id="uploadfile" accept='application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel' required>
                                            <div class="invalid-feedback">Please enter a valid File Format!</div>
                                        </div>
                                        <div class="col-12">
                                            <button class="btn btn-primary w-100" type="submit">Create Accounts</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </section>
