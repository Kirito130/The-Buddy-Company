    <!-- Main -->
    <main class="main" id="main">
        <div class="container mb-5">
            <section class="section register d-flex flex-column align-items-center">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-6 col-md-10 d-flex flex-column align-items-center justify-content-center">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <form class="row g-3 mx-4 my-4 needs-validation" method="post" enctype="multipart/form-data" action="/admin-add-new-event" novalidate>
                                        <!--Event ID-->
                                        <div class="col-12">
                                            <label for="eventID" class="form-label">Event ID</label>
                                            <input type="text" name="eventID" placeholder="Enter Event ID" class="form-control" id="eventID" required>
                                            <div class="invalid-feedback">Please enter a valid Event ID!</div>
                                        </div>

                                        <div class="col-12">
                                            <label for="eventName" class="form-label">Event Name</label>
                                            <input type="text" name="eventName" placeholder="Enter Event Name" class="form-control" id="eventName" required>
                                            <div class="invalid-feedback">Please enter an Event Name!</div>
                                        </div>

                                        <!--Event Start Date-->
                                        <div class="col-12">
                                            <label for="eventDate" class="form-label">Event Start Date</label>
                                            <input type="datetime-local" name="eventStartDate" placeholder="Enter Event Date" class="form-control" id="eventDate" required>
                                            <div class="invalid-feedback">Please enter a valid date!</div>
                                        </div>

                                        <!--Event Start Date-->
                                        <div class="col-12">
                                            <label for="eventEndDate" class="form-label">Event End Date</label>
                                            <input type="datetime-local" name="eventEndDate" placeholder="Enter Event Date" class="form-control" id="eventEndDate" required>
                                            <div class="invalid-feedback">Please enter a valid date!</div>
                                        </div>

                                        <!--Event Type-->
                                        <div class="col-12">
                                            <label for="eventType" class="form-label">Event Type</label>
                                            <select class="form-select" name="eventType" aria-label="Event-Type selection" id="eventType" required>
                                                <option selected disabled value="">Select</option>
                                                <option value="Online">Online</option>
                                                <option value="Offline">Offline</option>
                                            </select>
                                        </div>

                                        <!--Event Location-->
                                        <div class="col-12">
                                            <label for="eventLocation" class="form-label">Event Location</label>
                                            <input type="tel" name="eventLocation" placeholder="Enter Event Location" class="form-control" id="eventLocation" required>
                                            <div class="invalid-feedback">Please enter a valid Location!</div>
                                        </div>

                                        <!--Event About-->
                                        <div class="col-12">
                                            <label for="eventAbout" class="form-label">About the Event</label>
                                            <input type="tel" name="eventAbout" placeholder="Enter about the event" class="form-control" id="eventAbout" required>
                                            <div class="invalid-feedback">Please enter about the event!</div>
                                        </div>

                                        <!--Event Background-Image-->
                                        <div class="col-12 mb-3">
                                            <label for="uploadfile" class="form-label">Enter Background-image below</label>
                                            <input type="file" name="myFile" class="form-control" id="myFile" accept="image/*" required>
                                            <div class="invalid-feedback">Please enter a valid image!</div>
                                        </div>

                                        <!--Event Hero-Image-->
                                        <div class="col-12 mb-3">
                                            <label for="uploadfile" class="form-label">Enter Hero-image below</label>
                                            <input type="file" name="myFile" class="form-control" id="myFile" accept="image/*" required>
                                            <div class="invalid-feedback">Please enter a valid image!</div>
                                        </div>

                                        <div class="col-12">
                                            <button class="btn btn-primary w-100" type="submit">Create Event</button>
                                        </div>
                                    </form>
                                </div>
