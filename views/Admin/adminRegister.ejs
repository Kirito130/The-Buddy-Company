<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">


    <!-- Template Main CSS File -->
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <title>Register an Admin</title>
</head>

<body>
    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container" style="margin-top: 2rem;">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="pt-4 pb-2">
                        <h5 class="card-title text-center pb-0 fs-4">Register an Admin</h5>
                    </div>


                    <form action="/admin-register" method="post">

                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Username</label>
                            <input type="text" class="form-control" placeholder="Enter Username" id="exampleInputEmail1" autocomplete="off" aria-describedby="emailHelp" name="adminUsername">
                        </div>

                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Password</label>
                            <input type="password" class="form-control" placeholder="Enter Password" id="exampleInputPassword1" name="adminPassword">
                        </div>

                        <div class="mb-3">
                            <label for="adminNumber" class="form-label">Number</label>
                            <input type="text" class="form-control" placeholder="Enter Contact Number" id="adminNumber" autocomplete="off" name="adminNumber">
                        </div>

                        <div class="mb-3">
                            <label for="adminEmail" class="form-label">Email</label>
                            <input type="email" class="form-control" placeholder="Enter Email" id="adminEmail" autocomplete="off" name="adminEmail">
                        </div>

                        <div class="mb-3">
                            <label for="adminStream" class="form-label">Stream</label>
                            <input type="text" class="form-control" placeholder="Enter Stream" id="adminStream" autocomplete="off" name="adminStream">
                        </div>

                        <button type="submit" class="btn btn-primary ">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</body>

</html>